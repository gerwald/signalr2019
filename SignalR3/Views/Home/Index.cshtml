@{
	ViewData["Title"] = "Interad Teams";
}

@section Scripts
{
	<script src="/lib/jquery/dist/jquery.js"></script>
	<script>


		$("#chat").on("submit", function (e) {
			var name = document.getElementById("username").value;
			var message = document.getElementById("message").value;
			document.getElementById("message").value = "";

			alert(name + ': ' + message);

			e.preventDefault();
		});
	</script>
}

<form id="chat">
	<div class="row">
		<div class="col-md-6" style="margin-top: 20px;">
			<h2></h2>
			<div class="row">
				<div class="col-md-3 text-right">Benutzername:</div>
				<div class="col-md-9"><input type="text" id="username" /></div>
			</div>
			<div class="row">
				<div class="col-md-3 text-right">Nachricht:</div>
				<div class="col-md-9"><input type="text" id="message" /></div>
			</div>
			<div class="row">
				<div class="col-md-3"></div>
				<div class="col-md-9"><input type="submit" id="send" value="Send Message" /></div>
			</div>
		</div>
		<div class="col-md-6">
			<h2>Messages</h2>
			<div id="messages">

			</div>
		</div>
	</div>
</form>
